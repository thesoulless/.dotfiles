#!/usr/bin/env bash

str=""
for arg in "${@}"; do str+="$arg.*"; done
str=${str%??}

fif() {
  if [ ! "$#" -gt 0 ]; then echo "Need a string to search for!"; return 1; fi
  selected=$(rg -i --files-with-matches --no-messages "$1" ~/docs | fzf --preview "highlight -O ansi -l {} 2> /dev/null | rg --colors 'match:bg:yellow' --ignore-case --pretty --context 10 '$1' || rg --ignore-case --pretty --context 10 '$1' {}")

  if [[ -z $selected ]]; then
      exit 0
  fi

  glow $selected
}

fif "$str"
